<h1>
  <% if @slots.size > 1 %>
    Your slots
  <% elsif @slots.size == 1 %>
    Your slot
  <% else %>
    You haven't created a slot yet... ğŸ™
  <% end %>
</h1>

<% @slots.each do |slot| %>
  <div class="my-slot my-3 rounded p-3">
    <h3><strong>Price</strong>: <strong class="price"><%= number_to_currency(slot.price) %></strong></h3>
    <p><strong>Programming language</strong>:
      <% if slot.programming_language == 'C#' %>
        <i class="devicon-csharp-plain"></i>
      <% elsif slot.programming_language == 'C++' %>
        <i class="devicon-cplusplus-plain"></i>
      <% else %>
        <i class="devicon-<%= slot.programming_language.downcase %>-plain"></i>
      <% end %>
    <%= slot.programming_language %></p>
    <p><strong>Date</strong>: <%= slot.start_date.strftime('%d/%m') %> - <%= slot.end_date.strftime('%d/%m') %></p>
    <p><strong>Time</strong>: <%= slot.start_time.strftime('%R') %> - <%= slot.end_time.strftime('%R') %></p>

    <%= link_to "Edit this slot", edit_slot_path(slot), class: "btn btn-info" %>
    <%= link_to "Delete Slot", slot, class: "btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this slot?" } %>
  </div>
<% end %>
