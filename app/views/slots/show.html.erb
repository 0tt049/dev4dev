<h1><%= @slot.programming_language %> slot</h1>

<p><strong>Dev's email</strong>: <%= @slot.user.email %></p>
<p><strong>Dev's name</strong>: <%= @slot.user.name %></p>
<p><strong>Price</strong>: USD <%= @slot.price %></p>
<p><strong>Programming language</strong>: <%= @slot.programming_language %></p>
<p><strong>Date</strong>: <% @slot.start_date.strftime('%d/%m') %> - <% @slot.end_date.strftime('%d/%m') %></p>
<p><strong>Time</strong>: <% @slot.start_time.strftime('%R') %> - <% @slot.end_time.strftime('%R') %></p>
<%  %>
<%# <%= link_to "Book this slot", new_gig_path(@gig) %>
<% if @slot.user == current_user %>
  <%= link_to "Edit this slot", edit_slot_path(@slot), class: "btn btn-info" %>
  <%= link_to "Delete Slot", '/', class: "btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this slot?" } %>
<% else %>
  <%= link_to "Book this slot", new_gig_path(@gig), class: "btn btn-success" %>
<% end %>
<%= link_to "Back to slots", slots_path(@slot.programming_language), class: "btn btn-secondary" %>
