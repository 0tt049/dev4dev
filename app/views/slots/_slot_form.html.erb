
<%= simple_form_for slot do |f| %>
  <%= f.input :programming_language, collection: Slot::PROGRAMMING_LANGUAGES, error: 'Setting a programming language is mandatory' %>
  <%= f.input :start_date, error: "You must set a start date" %>
  <%= f.input :end_date, error: "You must set an end date" %>
  <%= f.input :start_time, error: "You must set a start time" %>
  <%= f.input :end_time, error: "You must set an end time" %>
  <%= f.input :price, error: "You must set a price" %>

  <%= f.button :submit, class: 'btn btn-success'%>
<% end %>
